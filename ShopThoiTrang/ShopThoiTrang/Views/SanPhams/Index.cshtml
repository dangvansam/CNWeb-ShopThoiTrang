@model IEnumerable<ShopThoiTrang.Framework.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="~/Content/client/assets/img/hero/category.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>product list</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!-- product list part start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="product_sidebar">
                    <div class="single_sedebar">
                        <form action="#">
                            <input type="text" name="#" placeholder="Search keyword">
                            <i class="ti-search"></i>
                        </form>
                    </div>
                    <div class="single_sedebar">
                        <div class="select_option">
                            <div class="select_option_list">Category <i class="right fas fa-caret-down"></i> </div>
                            <div class="select_option_dropdown">
                                @ViewBag.listl
                                @*@foreach (var item in ViewBag.listloai)
        {*@
                                <p><a href="/SanPhams/Loai=1">Tees</a></p>
                                <p><a href="/SanPhams/Loai/2">Tees</a></p>
                                <p><a href="/SanPhams/Loai/3">Tees</a></p>
                                <p><a href="/SanPhams/Loai/4">Tees</a></p>
                                <p><a href="/SanPhams/Loai/5">Tees</a></p>
                                <p><a href="/SanPhams/Loai/6">Tees</a></p>
                                <p><a href="/SanPhams/Loai/7">Tees</a></p>
                                <p><a href="/SanPhams/Loai/8">Tees</a></p>
                                <p><a href="/SanPhams/Loai/9">Tees</a></p>

                                @*  *@}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="product_list">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-lg-6 col-sm-6">
                                <div class="single_product_item">
                                    <img src="~/Content/ProductImages/@item.Anh" alt="" class="img-fluid">
                                    <a href="/SanPhams/Details/@item.MaSanPham">
                                        <h3>

                                            @item.TenSanPham

                                        </h3>
                                    </a>
                                    <h5>@item.Loai.TenLoai</h5>
                                    <p>$@item.Gia</p>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="load_more_btn text-center">
                        <a href="#" class="btn_3">Load More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product list part end-->